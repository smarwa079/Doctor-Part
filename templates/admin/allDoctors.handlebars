<div class="my-5">

    <!-- #region add doctor link-->
    <div>
        <a href="/admin/create_doctor">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16">
                <path d="M11 11V5H13V11H19V13H13V19H11V13H5V11H11Z"></path>
            </svg>
            Add new doctor
        </a>
    </div>
    <!-- #endregion -->

    <!-- #region table title-->
    <h2 class="text-center pb-5">Doctors Information</h2>
    <!-- #endregion -->

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Doctor Code</th>
                <th scope="col">Doctor Name</th>
                <th scope="col">Doctor Email</th>
                <th scope="col">Doctor Password</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each doctors}}
            <tr>
                <td>{{Doc_code}}</td>
                <td>{{Doc_name}}</td>
                <td>{{Doc_email}}</td>
                <td>{{Doc_password}}</td>
                <td></td>
                <td>
                    <a href="/admin/getAllDoctors/{{_id}}/edit" class="editDoctorLink">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                            <path
                                d="M15.7279 9.57629L14.3137 8.16207L5 17.4758V18.89H6.41421L15.7279 9.57629ZM17.1421 8.16207L18.5563 6.74786L17.1421 5.33365L15.7279 6.74786L17.1421 8.16207ZM7.24264 20.89H3V16.6474L16.435 3.21233C16.8256 2.8218 17.4587 2.8218 17.8492 3.21233L20.6777 6.04075C21.0682 6.43128 21.0682 7.06444 20.6777 7.45497L7.24264 20.89Z"
                                fill="rgba(57,111,193,1)"></path>
                        </svg>
                        Edit
                    </a>
                    |
                    <form action="/admin/{{_id}}/deleteDoctor?_method=DELETE" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-link delete"
                            onclick="return confirm('Are you sure you wish to delete this Subject?');">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                <path
                                    d="M7 4V2H17V4H22V6H20V21C20 21.5523 19.5523 22 19 22H5C4.44772 22 4 21.5523 4 21V6H2V4H7ZM6 6V20H18V6H6ZM9 9H11V17H9V9ZM13 9H15V17H13V9Z"
                                    fill="rgba(207,47,47,1)">
                                </path>
                            </svg>
                            Delete
                        </button>
                    </form>
                    |
                    <a href="/admin/{{_id}}/assignSubject">assign subject</a>
                    |
                    <a href="/admin/{{_id}}/getAssigned">Assigned subjects</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>